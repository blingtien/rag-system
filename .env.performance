# 性能优化配置文件
# 用于优化批量处理和并发性能

### 并发处理配置
# 最大并发文档处理数（建议根据服务器CPU核心数调整）
MAX_CONCURRENT_PROCESSING=5

# 批处理时的最大并发任务数
MAX_BATCH_CONCURRENT=5

# 异步操作最大数量
MAX_ASYNC=8

### 资源池配置
# 连接池大小
CONNECTION_POOL_SIZE=10

# 工作线程数
WORKER_THREADS=4

### 超时配置
# API请求超时（秒）
API_TIMEOUT=300

# 文档处理超时（秒）
PROCESSING_TIMEOUT=600

# WebSocket心跳间隔（秒）
WEBSOCKET_HEARTBEAT=30

### 缓存配置
# 启用响应缓存
ENABLE_CACHE=true

# 缓存过期时间（秒）
CACHE_TTL=300

# 最大缓存大小（MB）
MAX_CACHE_SIZE=500

### 队列配置
# 任务队列最大长度
MAX_QUEUE_SIZE=100

# 重试次数
MAX_RETRIES=3

# 重试延迟（毫秒）
RETRY_DELAY=2000

### 内存管理
# 最大内存使用（MB）
MAX_MEMORY_USAGE=4096

# 垃圾回收阈值
GC_THRESHOLD=80

### 日志配置
# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 日志批量写入大小
LOG_BATCH_SIZE=100

# 日志缓冲区大小（KB）
LOG_BUFFER_SIZE=1024

### 监控配置
# 启用性能监控
ENABLE_MONITORING=true

# 监控数据采样间隔（秒）
MONITORING_INTERVAL=60

# 性能报告生成间隔（分钟）
REPORT_INTERVAL=30