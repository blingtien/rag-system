# ===========================================
# B机部署环境变量配置模板
# 使用说明：复制此文件为.env，然后填入实际配置值
# ===========================================

# ===========================================
# LLM配置 - 请填入你的API密钥
# ===========================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
LLM_BINDING_API_KEY=your_api_key_here
LLM_BINDING_HOST=https://api.deepseek.com/v1

OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.deepseek.com/v1

# ===========================================
# 数据库配置 - B机数据库连接信息
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=raganything
POSTGRES_USER=raganything_user
POSTGRES_PASSWORD=raganything_pass
POSTGRES_SCHEMA=public

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=raganything_neo4j
NEO4J_DATABASE=neo4j

# ===========================================
# 存储配置
# ===========================================
WORKING_DIR=./rag_storage
OUTPUT_DIR=./output
STORAGE_MODE=hybrid

# ===========================================
# 服务配置
# ===========================================
API_PORT=8000
WEBUI_PORT=3000