# ===========================================
# 🚀 RAG System 环境配置模板
# ===========================================
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# LLM配置 - DeepSeek API（推荐，性价比高）
# ===========================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
LLM_BINDING_API_KEY=your_deepseek_api_key_here
LLM_BINDING_HOST=https://api.deepseek.com/v1

# OpenAI 兼容配置
OPENAI_API_KEY=your_deepseek_api_key_here
OPENAI_BASE_URL=https://api.deepseek.com/v1

# ===========================================
# 嵌入模型配置 - 本地模型（推荐，免费）
# ===========================================
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_MODEL_TYPE=local
EMBEDDING_DIMENSIONS=1024
EMBEDDING_MAX_LENGTH=32768

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL (主数据存储)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=raganything
POSTGRES_DATABASE=raganything
POSTGRES_USER=raganything_user
POSTGRES_PASSWORD=raganything_pass
POSTGRES_SCHEMA=public

# Neo4j (知识图谱)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=raganything_neo4j
NEO4J_DATABASE=neo4j

# Redis (缓存，可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# 存储模式配置
# ===========================================
STORAGE_MODE=hybrid
ENABLE_CACHING=true

# ===========================================
# RAG系统配置
# ===========================================
WORKING_DIR=./rag_storage
OUTPUT_DIR=./output
PARSER=mineru
PARSE_METHOD=auto
ENABLE_LLM_CACHE=true
ENABLE_PARSE_CACHE=true
MAX_CONCURRENT_PROCESSING=3

# ===========================================
# API服务器配置
# ===========================================
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# 文档处理配置
# ===========================================
MAX_PARALLEL_INSERT=4
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100
MAX_TOKEN_TEXT_CHUNK=4000
TOP_K=60
COSINE_THRESHOLD=0.2